<Window x:Class="Десктоп_РПМ.Профиль"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Десктоп_РПМ"
        mc:Ignorable="d"
        Title="Профиль" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Мой профиль" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- Изображение профиля -->
        <Image Source="im1.1.jpg" Width="150" Height="150" HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Краткое описание -->
        <TextBlock TextWrapping="Wrap" Text="Добавьте описание профиля." Margin="10"/>
    </Grid>
</Window>
